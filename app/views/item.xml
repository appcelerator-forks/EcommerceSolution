<Alloy>
	<Window class="vert" barColor="#75d0cb" id="win" title="Item" navBarHidden="false">
	<ActionBar platform="android" displayHomeAsUp="true" onHomeIconItemSelected="closeWindow" />
	<RightNavButton>
            <Button id="edit" onClick="navToCart" backgroundImage="/images/cart.png" />
    </RightNavButton>
	<ScrollableView id="scrollableView" showPagingControl="true" class="wsize" height="200">
		<ImageView image="/images/item/1.png" class="wfill hsize" ></ImageView>
		<ImageView image="/images/item/2.png" class="wfill hsize" ></ImageView>
		<ImageView image="/images/item/3.png" class="wfill hsize" ></ImageView>
	</ScrollableView>
	<View class="wfill" height="1" top="10" backgroundColor="black"></View>
	<Label class="h4 wfill" height="30" text="Availability: IN STOCK" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER"></Label>
	<View class="wfill" height="1" backgroundColor="black"></View>
	<Label class="h4" text="Check Box Long Sleeve Shirt" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" top="10" left="5"></Label>
	<Label class="h5 wfill" height="30" text="Color: Red Blue Yellow Orange White Black" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" left="5"></Label>
	<Label class="h5 wfill" height="30" text="Size: XS  S  M  L  XL  XXL" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" left="5"></Label>
	<Label class="h5 wfill" height=Ti.UI.SIZE text="Description : This is made of high quality material. It is worth the money. Suitable for male or female." left="5" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT"></Label>
	<Label class="h4" text="RM 0000.00" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" left="5" top="20" ></Label>
	<View class="wfill horz" height="60"  backgroundColor="black" top="20">
		<Label class="h4" text=" Quantity : " width="80" height="60" color="white" left="5"></Label>
		<TextField width="60" height="40" left="5" ></TextField>
		<Button class="button" onClick="addToCart" width="100" height="40" left="40">Add To Cart</Button>
	</View>
	
    </Window>
</Alloy>